{
    "name": "thunderdome-planning-poker",
    "version": "0.0.1",
    "description": "Planning Poker App",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/StevenWeathers/thunderdome-planning-poker.git"
    },
    "author": "Steven Weathers",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/StevenWeathers/thunderdome-planning-poker/issues"
    },
    "homepage": "https://github.com/StevenWeathers/thunderdome-planning-poker#readme",
    "private": true,
    "scripts": {
        "build": "rollup --config build/rollup.config.js",
        "autobuild": "rollup --config build/rollup.config.js -w",
        "format": "prettier --write 'frontend/**/*.{js,svelte,css,html}'",
        "test": "jest frontend/src",
        "test:watch": "npm run test -- --watch",
        "test:snapshot": "npm test -- -u"
    },
    "dependencies": {
        "he": "^1.2.0",
        "js-cookie": "^2.2.1",
        "navaid": "^1.2.0",
        "quill": "^1.3.7",
        "sockette": "^2.0.6",
        "svelte-i18n": "^3.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/preset-env": "^7.16.4",
        "@fullhuman/postcss-purgecss": "^1.3.0",
        "@testing-library/jest-dom": "^5.15.0",
        "@testing-library/svelte": "^3.0.3",
        "autoprefixer": "^9.8.6",
        "babel-jest": "^27.3.1",
        "husky": "^7.0.4",
        "jest": "^27.3.1",
        "lint-staged": "^11.2.6",
        "postcss": "^7.0.39",
        "postcss-import": "^12.0.1",
        "postcss-nesting": "^7.0.1",
        "prettier": "^2.4.1",
        "prettier-plugin-svelte": "^2.4.0",
        "rollup": "^1.32.1",
        "rollup-plugin-bundle-html": "^0.2.2",
        "rollup-plugin-commonjs": "^9.3.4",
        "rollup-plugin-copy": "^2.0.1",
        "rollup-plugin-delete": "^1.2.0",
        "rollup-plugin-livereload": "^1.3.0",
        "rollup-plugin-node-resolve": "^4.2.4",
        "rollup-plugin-postcss": "^2.9.0",
        "rollup-plugin-svelte": "^7.1.0",
        "rollup-plugin-terser": "^5.3.1",
        "svelte": "^3.44.1",
        "svelte-jester": "^2.1.5",
        "svelte-loader": "^2.13.6",
        "svelte-preprocess": "^3.9.12",
        "tailwindcss": "^1.8.13"
    },
    "optionalDependencies": {
        "fsevents": "^1.0.0"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ]
        ]
    },
    "jest": {
        "testEnvironment": "jsdom",
        "transform": {
            "^.+\\.js$": "babel-jest",
            "^.+\\.svelte$": "svelte-jester"
        },
        "moduleFileExtensions": [
            "js",
            "svelte"
        ],
        "setupFilesAfterEnv": [
            "@testing-library/jest-dom/extend-expect",
            "./frontend/src/setupTests.js"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "all",
        "printWidth": 80,
        "proseWrap": "always",
        "tabWidth": 4,
        "useTabs": false,
        "bracketSpacing": true,
        "semi": false,
        "arrowParens": "avoid",
        "svelteSortOrder": "options-scripts-styles-markup",
        "svelteStrictMode": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "frontend/**/*.{js, svelte, css, html}": [
            "npm run format",
            "git add"
        ]
    }
}
